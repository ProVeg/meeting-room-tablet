<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.futurice.android.reservator"
    android:versionCode="21"
    android:versionName="1.0.2">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_SYNC_STATS"/>
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.READ_CALENDAR"/>
    <uses-permission android:name="android.permission.WRITE_CALENDAR"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:name="ReservatorApplication"
        android:theme="@style/AppTheme"
        android:allowBackup="true">
        <activity
            android:name="de.synyx.android.reservator.screen.login.LoginActivity"
            android:screenOrientation="sensorLandscape"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".AccountSelectionActivity"
            android:screenOrientation="sensorLandscape"
            android:configChanges="orientation|screenSize"
            android:hardwareAccelerated="false">
        </activity>
        <activity
            android:name=".ModeSelectionActivity"
            android:screenOrientation="sensorLandscape"
            android:configChanges="orientation|screenSize"
            android:hardwareAccelerated="false">
        </activity>
        <!-- Hardware acceleration breaks the drawing of the vertices -->
        <activity
            android:name="RoomActivity"
            android:screenOrientation="sensorLandscape"
            android:configChanges="orientation|screenSize"
            android:hardwareAccelerated="false">
        </activity>
        <activity
            android:name="SettingsActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name="LobbyActivity"
            android:screenOrientation="sensorLandscape"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity
            android:name=".view.RoomReservationPopup"
            android:theme="@style/Theme.Transparent">
        </activity>
        <activity
            android:name=".ReservationActivity"
            android:screenOrientation="sensorLandscape"
            android:configChanges="orientation|screenSize">
        </activity>

        <uses-library android:name="android.test.runner" />

        <activity android:name="de.synyx.android.reservator.screen.main.MainActivity"></activity>
    </application>

</manifest>